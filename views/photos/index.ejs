<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/navbar %>
    <div class='max-width-4 mx-auto'>
      <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
      <% } %>
      <div class='clearfix'>
        <div class='col col-12'>
          <h1 class="kumar-one">Recent uploads</h1>
          <hr/>
          <div id='photos'>
            <% photos.forEach(function(photo) { %>
              <div class='photo'>
                <h2><%= photo.name %></h2>
                <a href='/photo/<%= photo.id %>/download'>
                  <img src='https://s3-eu-west-1.amazonaws.com/icy-photo-development/<%= photo.path%>' />
                </a>
              </div>
            <% }); %>
          </div>
        </div>
      </div>
  </body>
</html>
